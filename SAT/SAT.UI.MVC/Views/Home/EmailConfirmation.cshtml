@{
    ViewData["Title"] = "Email Confirmation";
}

@model SAT.UI.MVC.Models.ContactViewModel

<div class="page-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="header-text">
                    <h2>Contact Us</h2>
                    <div class="div-dec"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="offset-3 col-md-6 text-center mt-4">
    <p>
        You sent the following message on
        @DateTime.Now.Date.ToShortDateString() at
        @DateTime.Now.ToShortTimeString() :
    </p>
</div>

<br />

<div class="text-center alert alert-secondary mb-2">
    <p>
        <em>@Model.Message</em>
    </p>
</div>
