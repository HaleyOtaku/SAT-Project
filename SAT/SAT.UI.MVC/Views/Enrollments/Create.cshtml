@model SAT.DATA.EF.Models.Enrollment

@{
    ViewData["Title"] = "Create";
}

<h1 class="ms-5" style="margin-top:100px">Create</h1>

<h4 class ="ms-5">Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4 ms-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ScheduledClassId" class="control-label"></label>
                <select asp-for="ScheduledClassId" class ="form-control" asp-items="ViewBag.ScheduledClassId"></select>
            </div>
            <div class="form-group mt-2">
                <label asp-for="EnrollmentDate" class="control-label"></label>
                <input asp-for="EnrollmentDate" class="form-control" />
                <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-1">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
