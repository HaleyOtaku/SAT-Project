@model SAT.DATA.EF.Models.Enrollment

@{
    ViewData["Title"] = "Details";
}

<h1 style="margin-top:100px" class="ms-4">Details</h1>

<div class="m-4">
    <h4>Enrollment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledClass)
        </dt>
        <dd class = "col-sm-10">
