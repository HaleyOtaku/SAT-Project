@model SAT.DATA.EF.Models.Course

@{
    ViewData["Title"] = "Create";
}

<h1 class="ms-5"style="margin-top:100px">Create</h1>

<h4 class="ms-5">Course</h4>
<hr />
<div class="row">
    <div class="col-md-4 ms-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="CourseDescription" class="control-label"></label>
                <textarea asp-for="CourseDescription" class="form-control" rows="5" style="resize:none"></textarea>
                <span asp-validation-for="CourseDescription" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="CreditHours" class="control-label"></label>
                <input asp-for="CreditHours" class="form-control" />
                <span asp-validation-for="CreditHours" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Curriculum" class="control-label"></label>
                <input asp-for="Curriculum" class="form-control" />
                <span asp-validation-for="Curriculum" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group form-check mt-3 mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group mt-2 mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-1">Cancel</a>
            </div>
        </form>
    </div>
</div>

